generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model SpeakingEngagement {
  id          String         @id @default(auto()) @map("_id") @db.ObjectId
  conference  String
  dateRange   String
  websiteUrl  String?
  videoUrl    String?
  presentation Presentation[] @relation(references: [id])
}

model Presentation {
  id          String             @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  link        String
  topics      String[]
  engagements SpeakingEngagement[] @relation(references: [id])
}

model BlogPost {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  title    String
  postDate DateTime
  body     String
  categories String[]
}

model CommunityEvent {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  title         String
  date          DateTime
  description   String
  eventUrl      String
  organization  String
}
